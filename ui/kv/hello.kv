<HelloScreen>:
    name: 'hello'
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: dp(56)  # Adjust height to match the app bar
                        canvas.before:
                            Color:
                                rgba: app.theme_cls.primary_color
                            Rectangle:
                                size: self.size
                                pos: self.pos

                        MDLabel:
                            id: greeting_label
                            text: ""
                            halign: 'left'
                            valign: 'middle'
                            size_hint_y: None
                            height: dp(56)  # Adjust height to match the app bar
                            font_style: 'H6'
                            font_name: 'Roboto-Bold'
                            theme_text_color: 'Custom'
                            text_color: 1, 1, 1, 1  # White text color for visibility

                        Widget:  # Spacer to push the menu button to the right
                            size_hint_x: 1

                        MDIconButton:
                            icon: 'menu'
                            on_release: nav_drawer.set_state("open")
                            theme_text_color: 'Custom'
                            text_color: 1, 1, 1, 1  # White text color for visibility

                    MDBoxLayout:
                        orientation: 'vertical'
                        padding: dp(10)
                        spacing: dp(10)
                        
                        MDBoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None 
                            height: dp(70)  
                            ScrollView:
                                id: calendar_scroll
                                size_hint_y: None
                                height: dp(70) 
                                pos_hint: {'center_y': 0.6}
                                do_scroll_x: True
                                MDBoxLayout:
                                    id: calendar_bar
                                    orientation: 'horizontal'
                                    size_hint_x: None
                                    spacing: dp(5)
                                    padding: [dp(10), dp(20), dp(10), dp(10)]
                                    size_hint_y: None
                                    height: dp(80)
                                    width: self.minimum_width

                        MDBoxLayout:
                            id: navigation_buttons
                            orientation: 'horizontal'
                            size_hint_y: None
                            height: dp(50)
                            spacing: dp(10)

                        MDBoxLayout:
                            id: schedule_box
                            orientation: 'vertical'
                            size_hint_y: None
                            height: dp(200)

                        AnchorLayout:
                            anchor_x: 'center'
                            anchor_y: 'bottom'
                            MDRaisedButton:
                                text: 'Add Schedule'
                                icon: 'calendar'
                                on_press: root.show_add_schedule_dialog()

                        MDRaisedButton:
                            text: 'Go Back'
                            icon: 'arrow-back'
                            on_press: app.switch_screen('login')

        MDNavigationDrawer:
            id: nav_drawer
            anchor: 'right'
            
            BoxLayout:
                orientation: 'vertical'
                padding: dp(8)
                spacing: dp(8)
            
            Image:
                source: 'DSEBApp-master/photo/pic1-of-menu.jpg'
                size_hint_y: None
                height: dp(150)  # Adjust the height as needed
                allow_stretch: True
                pos_hint: {'center_y': 0.95}
                keep_ratio: True
            
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                padding: dp(10)

                MDCard:
                    size_hint_y: None
                    height: dp(48)
                    padding: dp(8)
                    md_bg_color: app.theme_cls.primary_light  # Background color for the button
                    pos_hint: {'center_y': 0.85}
                    MDFlatButton:
                        on_release: app.switch_screen('account')
                        text: 'Account'
                        icon: 'account'
                        size_hint_y: None
                        theme_text_color: 'Primary'
                        halign: 'left'

                MDCard:
                    size_hint_y: None
                    height: dp(48)
                    padding: dp(8)
                    md_bg_color: app.theme_cls.primary_light  # Background color for the button
                    pos_hint: {'center_y': 0.75}
                    MDFlatButton:
                        on_release: app.switch_screen('deadlines')
                        text: 'Deadlines'
                        icon: 'calendar'
                        size_hint_y: None
                        theme_text_color: 'Primary'
                        halign: 'left'

                MDCard:
                    size_hint_y: None
                    height: dp(48)
                    padding: dp(8)
                    md_bg_color: app.theme_cls.primary_light  # Background color for the button
                    pos_hint: {'center_y': 0.65}
                    MDFlatButton:
                        on_release: app.switch_screen('feature3')
                        text: 'Feature 3'
                        icon: 'star'
                        size_hint_y: None
                        theme_text_color: 'Primary'
                        halign: 'left'

                MDCard:
                    size_hint_y: None
                    height: dp(48)
                    padding: dp(8)
                    md_bg_color: app.theme_cls.primary_light  # Background color for the button
                    pos_hint: {'center_y': 0.55}
                    MDFlatButton:
                        on_release: app.switch_screen('feature4')
                        text: 'Feature 4'
                        icon: 'star-outline'
                        size_hint_y: None
                        theme_text_color: 'Primary'
                        halign: 'left'